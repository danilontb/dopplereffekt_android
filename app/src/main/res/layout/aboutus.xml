<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wer sind wir?"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/aboutUsString"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:background="@color/listbackground_public"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Warum Dopplereffekt?"
        android:id="@+id/textView12"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/whydopplerstring"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:background="@color/listbackground_controleposition"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:padding="10dp" />
</LinearLayout>