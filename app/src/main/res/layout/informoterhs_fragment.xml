<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Entweder mit deiner aktuellen Position. (GPS muss eingeschaltet sein)"
                android:id="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:textSize="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:id="@+id/btn_position"
                android:layout_margin="20dp"
                android:onClick="onButtonClick"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="oder lange auf die Karte clicken."
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_marginBottom="5dp" />

        <com.google.android.gms.maps.MapView android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


    </LinearLayout>

</RelativeLayout>